<h1><%= @list.title %> &mdash; Tasks</h1>
<%= link_to "To Do", list_tasks_path %>
<%= link_to "Done", list_tasks_path(completed: true) %>
<%= link_to "All Tasks", list_tasks_path(view_all: true) %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.name %>
        </td>
        <td>
          <%= task.completed %>
        </td>
        <td>
          <%= link_to 'Show', list_task_path(@list,task) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_list_task_path(@list, task) %>
        </td>
        <td>
          <%= link_to 'Destroy', [@list, task], :class => "destroy", :method => :delete, :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% if @tasks.length == 0 %>
      <p><i>This task list is currently empty</i></p>
    <% end %>
<br/>
<%= link_to 'Add a task', new_list_task_path(@list) %>
<%= link_to 'Back to Lists', lists_path %><br><br>
<%= link_to 'Destroy List', @list, :class => "destroy", :method => :delete, :data => { :confirm => 'Are you sure?' } %>

